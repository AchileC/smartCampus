{% extends 'base.html.twig' %}

{% block title %}
    Room Details
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 {% if room.state.value == 'ok' %}bg-success{% elseif room.state.value == 'problem' %}bg-warning{% elseif room.state.value == 'not linked' %}bg-secondary{% else %}bg-danger{% endif %} py-5 position-relative">
                <a href="{{ path('app_rooms') }}" class="btn btn-outline-light position-absolute start-5">Back to list</a>
                <h1 class="text-center text-white mb-0">Room {{ room.name }}</h1>
            </div>
        </div>

        <!-- Description Card -->
        <div class="card w-75 mx-auto mt-4">
            <div class="card-body">
                <h5 class="card-title">Description</h5>
                <p class="card-text">{{ room.description }}</p>
                <p class="card-text"><strong>Floor:</strong> {{ room.floor.value }}</p>
            </div>
        </div>

        <!-- Room Information Card -->
        <div class="card w-75 mx-auto mt-4">
            <div class="card-body">
                <h5 class="card-title">Room Constants</h5>
                <p class="card-text"><strong>State:</strong>
                    <span class="badge {% if room.state.value == 'ok' %}bg-success{% elseif room.state.value == 'problem' %}bg-warning{% elseif room.state.value == 'not linked' %}bg-secondary{% else %}bg-danger{% endif %}">
                        {{ room.state.value | capitalize }}
                    </span>
                </p>

                {% if room.acquisitionSystem %}
                    <ul class="list-group">
                        <!-- Temperature -->
                        <li class="list-group-item list-group-item-success">
                            ✅ <strong>Temperature:</strong>
                            {{ room.acquisitionSystem.temperature is not null ? room.acquisitionSystem.temperature ~ '°C' : 'No value measured' }}
                        </li>

                        <!-- Humidity -->
                        <li class="list-group-item list-group-item-success">
                            ✅ <strong>Humidity:</strong>
                            {{ room.acquisitionSystem.humidity is not null ? room.acquisitionSystem.humidity ~ '%' : 'No value measured' }}
                        </li>

                        <!-- CO₂ -->
                        <li class="list-group-item list-group-item-success">
                            ✅️ <strong>CO₂:</strong>
                            {{ room.acquisitionSystem.co2 is not null ? room.acquisitionSystem.co2 ~ ' ppm' : 'No value measured' }}
                            {% if room.acquisitionSystem.co2 is not null and room.acquisitionSystem.co2 > 1000 %}
                                <a href="">See anomaly</a>
                            {% endif %}
                        </li>
                    </ul>
                {% else %}
                    <p class="text-muted">No values</p>
                {% endif %}
            </div>
        </div>
        {% if not room.acquisitionSystem %}
            <div class="card w-75 mx-auto mt-4 text-center">
                <div class="card-body">
                    <h6 class="card-title">No assigned acquisition system.</h6>
                    <a href="{{ path('app_rooms_update', { name: room.name }) }}" class="btn btn-outline-secondary">Update</a>
                </div>
            </div>
        {% endif %}
    </div>



{% endblock %}