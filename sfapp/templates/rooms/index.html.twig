{% extends 'base.html.twig' %}

{% block title %}Rooms List{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Rooms List</h1>

        <div class="mb-4">
            <a href="{{ path('app_rooms_add') }}" class="btn btn-success btn-lg">Add Room</a>
        </div>

        {{ form_start(filterForm, {'attr': {'class': 'mb-4'}}) }}
        <div class="row align-items-end">
            <div class="col-md-3">
                {{ form_row(filterForm.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-3">
                {{ form_row(filterForm.floor, {'attr': {'class': 'form-select'}}) }}
            </div>
            <div class="col-md-3">
                {{ form_row(filterForm.state, {'attr': {'class': 'form-select'}}) }}
            </div>
            <div class="col-md-3 d-flex justify-content-end">
                {{ form_row(filterForm.filter, {'attr': {'class': 'btn btn-primary w-100'}}) }}
            </div>
        </div>
        {{ form_end(filterForm) }}

        <div class="row">
            {% if rooms|length == 0 %}
                <div class="col-12">
                        <p class="text-center text-dark">Aucune salle</p>
                </div>
            {% else %}
                {% for room in rooms %}
                    <div class="col-12 mb-3">
                        <div class="card">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title">{{ room.name }}</h5>
                                    <p class="card-text"><strong>Floor:</strong> {{ room.floor.value }}</p>
                                    <p class="card-text"><strong>State:</strong>
                                        <span class="badge {% if room.state.value == 'ok' %}bg-success{% elseif room.state.value == 'problem' %}bg-warning{% else %}bg-danger{% endif %}">
                                        {{ room.state.value | capitalize }}
                                    </span>
                                    </p>
                                </div>

                                <div>
                                    <div class="d-flex gap-2">
                                        <a href="{{ path('app_rooms_details', { name: room.name }) }}" class="btn btn-outline-primary">Details</a>
                                        <a href="{{ path('app_rooms_update', { name: room.name }) }}" class="btn btn-outline-secondary">Update</a>

                                        {{ form_start(deleteForms[room.name], {'attr': {'class': 'd-inline-block'}}) }}
                                        <button type="submit" class="btn btn-outline-danger"
                                                onclick="return confirm('Are you sure you want to delete this room?');">Delete</button>
                                        {{ form_end(deleteForms[room.name]) }}
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}
