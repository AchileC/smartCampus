{% extends 'base.html.twig' %}

{% block title %}Rooms List{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Rooms List</h1>

        <!-- Formulaire de filtre -->
        {{ form_start(form, {'attr': {'class': 'mb-4'}}) }}
        <div class="row align-items-end">
            <div class="col-md-3">
                {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.floor, {'attr': {'class': 'form-select'}}) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.state, {'attr': {'class': 'form-select'}}) }}
            </div>
            <div class="col-md-3 d-flex justify-content-end">
                {{ form_row(form.filter, {'attr': {'class': 'btn btn-primary w-100'}}) }}
            </div>
        </div>
        {{ form_end(form) }}

        <!-- Liste des salles -->
        <div class="row">
            {% if rooms|length == 0 %}
                <!-- Afficher un message si aucune salle ne correspond au filtre ou si aucune salle n'existe -->
                <div class="col-12">
                    {% if formSubmitted %}
                        <p class="text-center text-dark">Aucune salle correspondante</p>
                    {% else %}
                        <p class="text-center text-dark">Aucune salle créée</p>
                    {% endif %}
                </div>
            {% else %}
                <!-- Liste des salles -->
                {% for room in rooms %}
                    <div class="col-12 mb-3">
                        <div class="card">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <!-- Contenu principal de la carte -->
                                <div>
                                    <h5 class="card-title">{{ room.name }}</h5>
                                    <p class="card-text"><strong>Floor:</strong> {{ room.floor.value }}</p>
                                    <p class="card-text"><strong>State:</strong>
                                        <span class="badge {% if room.state.value == 'ok' %}bg-success{% elseif room.state.value == 'problem' %}bg-warning{% else %}bg-danger{% endif %}">
                                        {{ room.state.value | capitalize }}
                                    </span>
                                    </p>
                                </div>

                                <!-- Bouton Details -->
                                <div>
                                    <a href="{{ path('app_rooms_details', { name: room.name }) }}" class="btn btn-outline-primary">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}
