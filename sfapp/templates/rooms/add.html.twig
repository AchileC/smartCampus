{% extends 'base.html.twig' %}
{# rooms/add.html.twig #}
{% block title %}{{ '_add_room'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4 text-center">{{ '_add_room'|trans }}</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row mb-3">
                                    <!-- Nom de la salle -->
                                    <div class="col-md-6">
                                        {{ form_label(form.name, 'room_name' |trans, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.name, {
                                            'attr': {
                                                'class': 'form-control' ~ (form.name.vars.errors|length > 0 ? ' is-invalid shake' : '')
                                            }
                                        }) }}
                                        {% if form.name.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.name) }}
                                            </div>
                                        {% endif %}
                                    </div>

                                    <!-- Étage -->
                                    <div class="col-md-6">
                                        {{ form_label(form.floor, 'floor'|trans, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.floor, {
                                            'attr': {
                                                'class': 'form-select' ~ (form.floor.vars.errors|length > 0 ? ' is-invalid shake' : '')
                                            }
                                        }) }}
                                        {% if form.floor.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.floor) }}
                                            </div>
                                        {% endif %}
                                    </div>

                                </div>
                            </div>
                        </div>

                        <!-- Caractéristiques physiques -->
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row mb-3">
                                    <!-- Nombre de fenêtres -->
                                    <div class="col-md-6">
                                        {{ form_label(form.nbWindows, 'number_of_windows'|trans, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.nbWindows, {
                                            'attr': {
                                                'class': 'form-control' ~ (form.nbWindows.vars.errors|length > 0 ? ' is-invalid shake' : '')
                                            }
                                        }) }}
                                        {% if form.nbWindows.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.nbWindows) }}
                                            </div>
                                        {% endif %}
                                    </div>

                                    <!-- Nombre de radiateurs -->
                                    <div class="col-md-6">
                                        {{ form_label(form.nbHeaters, 'number_of_heaters'|trans, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.nbHeaters, {
                                            'attr': {
                                                'class': 'form-control' ~ (form.nbHeaters.vars.errors|length > 0 ? ' is-invalid shake' : '')
                                            }
                                        }) }}
                                        {% if form.nbHeaters.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.nbHeaters) }}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Dimensions et orientation -->
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row mb-3">
                                    <!-- Surface -->
                                    <div class="col-md-6">
                                        {{ form_label(form.surface, 'surface'|trans ~ ' (m²)', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.surface, {
                                            'attr': {
                                                'class': 'form-control' ~ (form.surface.vars.errors|length > 0 ? ' is-invalid shake' : '')
                                            }
                                        }) }}
                                        {% if form.surface.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.surface) }}
                                            </div>
                                        {% endif %}
                                    </div>

                                    <!-- Orientation cardinale -->
                                    <div class="col-md-6">
                                        {{ form_label(form.cardinalDirection, 'cardinal_direction'|trans, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.cardinalDirection, {
                                            'attr': {
                                                'class': 'form-select' ~ (form.cardinalDirection.vars.errors|length > 0 ? ' is-invalid shake' : '')
                                            }
                                        }) }}
                                        {% if form.cardinalDirection.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.cardinalDirection) }}
                                            </div>
                                        {% endif %}
                                    </div>

                                </div>
                            </div>
                        </div>

                        <!-- Boutons Submit et Annuler -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary me-3">{{ 'add'|trans }}</button>
                            <a href="{{ path('app_rooms') }}" class="btn btn-secondary">{{ 'cancel'|trans }}</a>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}