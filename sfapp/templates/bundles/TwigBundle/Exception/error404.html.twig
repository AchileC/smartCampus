{% extends 'base.html.twig' %}
{# bundles/TwigBundle/Exception/error404.html.twig #}
{% block title %}404 - Page Not Found{% endblock %}

{% block body %}
    <div class="container text-center mt-5">
        <h1 class="text-danger">404 - Page Not Found</h1>
        <p class="lead">Oops! The page you are looking for does not exist.</p>
        <p>It might have been moved, deleted, or never existed in the first place.</p>
        <a href="{{ path('app_rooms') }}" class="btn btn-primary btn-lg">Go Back to Rooms</a>
    </div>
{% endblock %}