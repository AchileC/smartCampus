{% extends 'base.html.twig' %}
{% block title %}{{ 'room.dashboard'|trans }}{% endblock %}

{% block body %}
    <div class="container-fluid p-4" style="font-family: Arial, sans-serif;">
        <!-- Titre principal -->
        <div class="text-center mb-4">
            <h1>{{ 'hello'|trans }} {{ app.user.username }}!</h1>
            <h3>{{ "now"|format_datetime(pattern='EEEE d MMMM Y') }}</h3>

        </div>

        <!-- Contenu principal en grille -->
        <div class="row gx-3 align-items-stretch" style="height: calc(100% - 300px);">
            <!-- Colonne gauche -->
            <div class="col-6 d-flex flex-column gap-3">
                <!-- Infos -->
                <div class="card p-3 flex-grow-1 d-flex flex-column justify-content-center align-items-center" style="border-radius: 10px;">
                    <h3 class="text-center mb-4">{{ 'infos'|trans }}</h3>
                    <div class="d-flex justify-content-center flex-wrap gap-3">
                        <!-- Nombre de salles visible pour tous -->
                        <div class="info-card border rounded d-flex flex-column justify-content-center align-items-center p-3 bg-dark text-white" style="width: 150px; border-radius: 10px;">
                            <h4 class="fw-bold">{{ rooms_count }}</h4>
                            <p class="mb-0">{{ 'rooms'|trans }}</p>
                        </div>

                        <!-- Nombre d'AS visible uniquement pour les techniciens -->
                        {% if is_granted('ROLE_TECHNICIAN') %}
                            <div class="col-6 text-center">
                                <div class="info-card border rounded d-flex flex-column justify-content-center align-items-center p-3 bg-dark text-white">
                                    <h4>{{ as_count }}</h4>
                                    <p>{{ 'systems'|trans }}</p>
                                </div>
                            </div>
                        {% endif %}

                        <!-- Ã‰tats critiques et Ã  risque visibles uniquement pour les managers -->
                        {% if is_granted('ROLE_MANAGER') %}
                            <!-- Nombre de salles critiques -->
                            <a href="{{ path('app_rooms', {'state': 'critical'}) }}"
                               class="info-card btn border rounded d-flex flex-column justify-content-center align-items-center p-3 bg-danger text-white"
                               style="width: 150px; border-radius: 10px;">
                                <i class="bi bi-exclamation-triangle-fill mb-2" style="font-size: 1.5rem;"></i>
                                <h4 class="fw-bold">{{ critical_count }}</h4>
                                <p class="mb-0">{{ 'critical'|trans }}</p>
                            </a>

                            <!-- Nombre de salles Ã  risque -->
                            <a href="{{ path('app_rooms', {'state': 'at risk'}) }}"
                               class="info-card btn border rounded d-flex flex-column justify-content-center align-items-center p-3 bg-warning text-dark"
                               style="width: 150px; border-radius: 10px;">
                                <i class="bi bi-info-circle-fill mb-2" style="font-size: 1.5rem;"></i>
                                <h4 class="fw-bold">{{ at_risk_count }}</h4>
                                <p class="mb-0">{{ 'at risk'|trans }}</p>
                            </a>
                        {% endif %}
                    </div>
                </div>

                <!-- MÃ©tÃ©o -->
                <div class="card p-3 flex-grow-1" style="border-radius: 10px;">
                    <h3 class="text-center">{{ 'weather'|trans }}</h3>
                    <div class="d-flex justify-content-around align-items-center mt-4 h-100">
                        {% set pictocodeMapping = {
                            1: 'â˜€ï¸',
                            2: 'ğŸŒ¤ï¸',
                            3: 'â›…',
                            4: 'â˜ï¸',
                            5: 'ğŸŒ«ï¸',
                            6: 'ğŸŒ§ï¸',
                            7: 'ğŸŒ¦ï¸',
                            8: 'â›ˆï¸',
                            9: 'ğŸŒ¨ï¸',
                            10: 'ğŸŒ¥ï¸â„ï¸',
                            11: 'ğŸŒ¨ï¸ğŸŒ§ï¸',
                            12: 'ğŸŒ¦ï¸',
                            13: 'ğŸŒ¨ï¸',
                            14: 'ğŸŒ¦ï¸',
                            15: 'ğŸŒ¨ï¸',
                            16: 'ğŸŒ¦ï¸',
                            17: 'ğŸŒ¨ï¸'
                        } %}

                        {% for day in forecast %}
                            <div class="text-center">
                                {% if loop.first %}
                                    <h1 class="fw-bold">{{ 'today'|trans }}</h1>
                                {% else %}
                                    <h5>{{ day.date|format_datetime(pattern='EEEE') }}</h5>
                                {% endif %}
                                <div class="mb-2" style="font-size: 2.5rem;">
                                    {{ pictocodeMapping[day.pictocode] ?? 'â“' }}
                                </div>
                                <p>{{ day.temperature_min|round }}Â° / {{ day.temperature_max|round }}Â°</p>
                            </div>
                        {% else %}
                            <p>{{ 'weather.no_data'|trans }}</p>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Colonne droite : To do list -->
            <div class="col-6">
                <div class="card p-5 h-60 d-flex flex-column justify-content-between" style="border-radius: 10px; max-height: 500px;">
                    {% if is_granted('ROLE_TECHNICIAN') %}
                        <h3 class="text-center">{{ 'todolist'|trans }}</h3>
                    {% else %}
                        <h3 class="text-center">{{ 'todolist_technician'|trans }}</h3>
                    {% endif %}
                    <div class="mt-4 flex-grow-1 overflow-auto" style="max-height: 300px;">
                        {% for action in actions %}
                            <div class="d-flex justify-content-between align-items-center border rounded p-2 mb-2">
                                <div>
                                    <p class="mb-1">
                                        <strong>{{ ('_action_info_state.' ~ action.info.value | upper) | trans }}</strong> {{ 'on_room'|trans }} {{ action.room.name }}.
                                    </p>
                                    <p class="mb-1 small text-muted">
                                        {{ 'created_at'|trans }}: {{ action.createdAt|date("d/m/Y - H:i:s", "Europe/Paris") }}.
                                        {% if action.startedAt %}
                                            <br>
                                            {{ 'started_on'|trans }}: {{ action.startedAt|date("d/m/Y - H:i:s", "Europe/Paris") }}.
                                        {% else %}
                                            <br>
                                            <em>{{ 'not_started'|trans }}</em>
                                        {% endif %}
                                    </p>
                                </div>
                                <span class="badge {% if action.state.value == 'to do' %}bg-warning text-dark{% elseif action.state.value == 'doing' %}bg-primary text-light{% endif %}">
                                {{ ('_action_state.' ~ action.state.value | upper) | trans }}
                            </span>
                            </div>
                        {% endfor %}
                        {% if actions is empty %}
                            <p class="text-center">{{ 'no_pending'|trans }}</p>
                        {% endif %}
                    </div>
                    {% if is_granted('ROLE_TECHNICIAN') %}
                        <div class="text-center mt-3">
                            <a href="{{ path('app_todolist') }}" class="btn btn-primary">{{ 'access'|trans }}</a>
                            <p class="text-muted mt-2">{{ 'last_updated'|trans }}: {{ "now"|date("d/m/Y - H:i:s", "Europe/Paris") }}</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}