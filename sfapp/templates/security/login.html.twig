{% extends 'base.html.twig' %}
{# security/login.html.twig #}
{% block title %}{{ 'login.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 col-sm-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header text-center">
                        <h2 class="h4 mb-0">{{ 'login.header'|trans }}</h2>
                    </div>
                    <div class="card-body">
                        <form method="post" class="row g-4">
                            {% if error %}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'access_denied.close_button'|trans }}"></button>
                                </div>
                            {% endif %}

                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" name="username" id="inputUsername" class="form-control" placeholder="{{ 'login.username_placeholder'|trans }}" required autofocus>
                                    <label for="inputUsername">{{ 'login.username_label'|trans }}</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="{{ 'login.password_placeholder'|trans }}" required>
                                    <label for="inputPassword">{{ 'login.password_label'|trans }}</label>
                                </div>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="col-12 text-end">
                                <button class="btn btn-primary btn-lg w-100" type="submit">{{ 'login.submit_button'|trans }}</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
