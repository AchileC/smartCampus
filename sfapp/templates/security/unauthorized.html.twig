{% extends 'base.html.twig' %}
{# security/unauthorized.html.twig #}
{% block title %}{{ 'access_denied.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h1 class="display-4 text-danger">{{ 'access_denied.header'|trans }}</h1>
                <p class="lead">{{ 'access_denied.message'|trans }}</p>
                <hr>
                <p>{{ 'access_denied.contact_admin'|trans }}</p>
                <a href="{{ path('app_rooms') }}" class="btn btn-primary mt-3">{{ 'access_denied.return_button'|trans }}</a>
                <a href="{{ path('app_login') }}" class="btn btn-secondary mt-3">{{ 'access_denied.login_button'|trans }}</a>
            </div>
        </div>
    </div>
{% endblock %}
